# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/sessiondb?sslmode=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
# Generate RSA keys using: openssl genrsa -out private.pem 2048
# Then extract public key: openssl rsa -in private.pem -pubout -out public.pem
JWT_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----
MIIEpAIBAAKCAQEA...
-----END RSA PRIVATE KEY-----

JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----
MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEA...
-----END PUBLIC KEY-----

# JWT Claims
JWT_ISSUER=session-service
JWT_AUDIENCE=api

# Token Expiration (in seconds or duration like "3600s", "1h")
JWT_EXPIRY=3600s
REFRESH_TOKEN_EXPIRY=604800s

# Refresh Token Configuration
REFRESH_TOKEN_LENGTH=32

# Server Configuration
SERVER_PORT=9090
